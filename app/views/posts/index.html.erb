<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <tbody>
    <% @posts.each_slice(4) do |group| %>
      <tr>
        <% group.each do |post| %>
          <td>
            <strong>Title: <%= post.title %></strong><br>
            <%= image_tag post.image.variant(resize_to_fill: [200, 200]), size: "200x200" if post.image.attached? %><br>
            <strong>Content:</strong>
            <p><%= post.content %></p>
            <strong>User ID:</strong>
            <p><%= post.user_id %></p>
            <%= link_to 'Show', post %><br>
            <%= link_to 'Edit', edit_post_path(post) %><br>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
