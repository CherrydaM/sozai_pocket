<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル:</strong>
  <%= @post.title %>
</p>

<% if @post.image.attached? %>
  <%= image_tag @post.image, style: "max-width: 300px;" %>
<% end %>

<p>
  <strong>内容:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>ユーザー:</strong>
  <%= @post.user_id %>
</p>



<%= link_to '編集', edit_post_path(@post) %> |
<%= link_to '戻る', posts_path %>
